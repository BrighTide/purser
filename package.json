{
  "name": "colony-wallet",
  "version": "0.1.0",
  "description": "A set of utilities to interface with ethereum addresses",
  "scripts": {
    "precommit": "lint-staged",
    "build": "node scripts/build-all-modules.js",
    "update-modules": "node scripts/update-all-packages-json.js",
    "populate-modules": "node scripts/populate-all-modules.js",
    "release-modules": "sh scripts/publish-to-npm.sh",
    "flow": "flow",
    "glow": "glow",
    "glow:watch": "glow --watch",
    "flow:check": "flow check",
    "flow:ci": "flow --json | flow-junit-transformer > reports/flow/flow-results.xml",
    "lint": "eslint modules/node_modules/@colony/**/*.js",
    "lint:fix": "eslint modules/node_modules/@colony/**/*.js --fix",
    "lint:ci": "eslint --format junit -o reports/eslint/eslint-results.xml modules/node_modules/@colony/**/*.js",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watchAll --verbose",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:ci": "jest --clearCache && NODE_ENV=test jest --ci --bail --verbose=true --reporters='jest-junit'",
    "lockfile:update": "greenkeeper-lockfile-update",
    "lockfile:upload": "greenkeeper-lockfile-upload"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JoinColony/colony-wallet.git"
  },
  "author": "Raul Glogovetan <raul@colony.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JoinColony/colony-wallet/issues"
  },
  "homepage": "https://github.com/JoinColony/colony-wallet",
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "@colony/eslint-config-colony": "^5.0.0",
    "@kironeducation/flow-junit-transformer": "^0.3.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^9.0.0",
    "babel-jest": "^23.4.2",
    "babel-loader": "^8.0.2",
    "babel-plugin-dynamic-import-node": "^2.1.0",
    "babel-plugin-transform-inline-environment-variables": "^0.4.3",
    "camelcase": "^5.0.0",
    "chalk": "^2.3.1",
    "chokidar": "^2.0.2",
    "denodeify": "^1.2.1",
    "eslint": "5.0.1",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-config-prettier": "^3.0.0",
    "eslint-plugin-flowtype": "^2.47.1",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-prettier": "^2.5.0",
    "find-imports": "^0.5.2",
    "flow-bin": "^0.80.0",
    "flow-copy-source": "^2.0.0",
    "fs-extra": "^7.0.0",
    "glow": "^1.2.2",
    "greenkeeper-lockfile": "1",
    "husky": "^0.14.3",
    "jest": "^23.5.0",
    "jest-junit": "^5.0.0",
    "jest-sandbox": "^1.1.1",
    "lint-staged": "^7.0.0",
    "prettier": "^1.10.2",
    "regenerator-runtime": "^0.12.0",
    "webpack": "^4.17.2",
    "webpack-cli": "^3.1.0"
  },
  "dependencies": {
    "@ledgerhq/hw-app-eth": "^4.19.0",
    "@ledgerhq/hw-transport-u2f": "^4.20.0",
    "bip32-path": "^0.4.2",
    "bn.js": "^4.11.8",
    "ethereumjs-tx": "^1.3.6",
    "ethereumjs-util": "^5.2.0",
    "ethers": "^3.0.16",
    "hdkey": "^1.0.0",
    "lodash.isequal": "^4.5.0"
  }
}
