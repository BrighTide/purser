{
  "name": "colony-wallet",
  "version": "0.1.0",
  "description": "A set of utilities to interface with ethereum addresses",
  "main": "dist/index.js",
  "module": "dist/es/index.js",
  "browser": "dist/umd/index.min.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "precommit": "lint-staged",
    "watch": "node scripts/watch.js",
    "build": "node scripts/build.js",
    "flow": "flow",
    "glow": "glow",
    "flow:check": "flow check",
    "flow:ci": "flow --json | flow-junit-transformer",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "lint:ci": "eslint --format junit -o reports/eslint/eslint-results.xml src",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --testResultsProcessor='jest-junit'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JoinColony/colony-wallet.git"
  },
  "author": "Raul Glogovetan <raul@colony.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JoinColony/colony-wallet/issues"
  },
  "homepage": "https://github.com/JoinColony/colony-wallet",
  "devDependencies": {
    "@colony/eslint-config-colony": "^4.0.0",
    "@kironeducation/flow-junit-transformer": "^0.3.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-jest": "^22.2.2",
    "babel-loader": "^7.1.2",
    "babel-plugin-dynamic-import-node": "^1.2.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "chalk": "^2.3.1",
    "chokidar": "^2.0.2",
    "eslint": "^4.17.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^2.39.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-prettier": "^2.5.0",
    "flow-bin": "^0.65.0",
    "flow-copy-source": "^1.3.0",
    "glow": "^1.2.2",
    "husky": "^0.14.3",
    "jest": "^22.3.0",
    "jest-junit": "^3.6.0",
    "jest-sandbox": "^1.1.1",
    "lint-staged": "^6.1.0",
    "prettier": "^1.10.2",
    "uglifyjs-webpack-plugin": "^1.1.8",
    "webpack": "^3.11.0"
  }
}
